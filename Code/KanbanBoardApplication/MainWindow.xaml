<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="KanbanBoardApplication.MainWindow"
        Title="MainWindow" Height="350" WindowState="Maximized" Background="Black"  FontFamily="OpenSans">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50px" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
            </Grid>

            <Label Grid.Column="0" FontSize="24" Foreground="White" VerticalAlignment="Center" Content="KANBAN BOARD"/>
        </DockPanel>
        <DockPanel Grid.Row="1">
            <ContentControl x:Name="ContentArea" />
        </DockPanel>

    </Grid>
</Window>
