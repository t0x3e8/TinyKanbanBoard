<UserControl x:Class="KanbanBoardApplication.UsersControls.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="Auto" x:Name="root" Width="245">
    <Grid>
        <Border BorderBrush="#8e8e8e" BorderThickness="1" Grid.Column="0" Grid.ColumnSpan="2" CornerRadius="2" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="45"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Margin="4" Foreground="#262626" FontSize="17" Text="{Binding Text, ElementName=root}" TextTrimming="WordEllipsis" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
